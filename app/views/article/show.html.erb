<h4> <a href=<%= @url[0] %>><%= @title[0] %></a></h4>
<h5>From: <b><%= @source[0] %></b>
<% if @authors[0] == '' -%>
<% else -%>
By: <b><%= @authors[0] %></b>
<% end -%>
 Published at: <b><%= @date[0].to_formatted_s(:long)  %></b>
</h5>
<% if current_user.try(:admin?) %>
    <%= form_tag("/rank", method: "post") do %>
        <%= label_tag(:q, "Rank:") %>
        <%= number_field_tag(:rank, @def_rank) %>
        <%= hidden_field_tag(:id, @my_id) %>
        <%= submit_tag("Set Rank") %>
    <% end %>
    <p>Current Rank: <%= @def_rank[0] %><p>
<% end %>
<div class="well">
	    <div class="panel-body" style="text-align: center;">
        <% if @photo_url.to_s == ''  %>
            <img src="/images/<%= @source_id %>.jpg" class="img-responsive" style="min-height: 200px;"/>
        <% else %>
			<img src="<%=@photo_url %>" class="img-responsive" style="min-height: 200px;"/>
        <% end %>
       </div>
<p><%= (h @content[0]).gsub("\n", "<br />").html_safe %></p>
</div>
