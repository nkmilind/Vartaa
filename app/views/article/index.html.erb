<div id="main">
    <div class="row">
    	  <div class="col-2-3">
          <%= render @article %>
    	  </div>
		  <div class="col-1-3">
		  	   <div class="col-xs-12 bootcards-list">
		  	   	  <div class="panel panel-default bootcards-media">
		  		    <div class="panel-heading" style="min-height: 40px; max-height: 30px;">
        				<h3 class="panel-title" style="    font-size: 14.5px; text-align: center;">
						Latest Headlines
        				</h3>
      					</div>
      					<div class="panel-body" style="min-height: 810px; max-height: 825px; overflow-y: scroll;">
                        <% @latest.each do |late| %>
                           <p><%= HTMLEntities.new.decode late.title %></p>
       					<% end %>
                        </div>
      				</div>
      			  </div>
  		  	   </div>
		  </div>
    </div>
</div>
<div id="infinite-scrolling" style="visibility:hidden">
  <%= will_paginate %>
</div>
